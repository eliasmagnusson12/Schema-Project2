<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="anchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/9" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.ControllerMail">
   <children>
      <Button fx:id="send" layoutX="468.0" layoutY="311.0" mnemonicParsing="false" onAction="#sendEmail" onMouseEntered="#handleHoverEffect" onMouseExited="#handleNoHoverEffect" />
      <TextField fx:id="subject" layoutX="302.0" layoutY="47.0" prefHeight="25.0" prefWidth="220.0" promptText="Subject.." />
      <TextArea fx:id="mailTextArea" layoutX="302.0" layoutY="84.0" prefHeight="227.0" prefWidth="220.0" promptText="Message.." />
      <Label layoutX="300.0" layoutY="14.0" text="Write email:" textFill="#0a0d0a">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <Label layoutX="13.0" layoutY="61.0" text="Email to:" textFill="#141714">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <CheckBox fx:id="box1" layoutX="14.0" layoutY="102.0" mnemonicParsing="false" onAction="#toEmail" text="Admin" textFill="#070a07">
         <font>
            <Font size="18.0" />
         </font></CheckBox>
      <CheckBox fx:id="box2" layoutX="14.0" layoutY="139.0" mnemonicParsing="false" onAction="#toEmail" text="Boss 1" textFill="#141b14">
         <font>
            <Font size="18.0" />
         </font></CheckBox>
      <CheckBox fx:id="box3" layoutX="14.0" layoutY="173.0" mnemonicParsing="false" onAction="#toEmail" text="Boss 2" textFill="#040704">
         <font>
            <Font size="18.0" />
         </font></CheckBox>
      <CheckBox fx:id="box4" layoutX="14.0" layoutY="209.0" mnemonicParsing="false" onAction="#toEmail" text="Boss 3" textFill="#060a06">
         <font>
            <Font size="18.0" />
         </font></CheckBox>
      <Label fx:id="messageSent" layoutX="302.0" layoutY="315.0" textFill="#02ff20">
         <font>
            <Font size="10.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
