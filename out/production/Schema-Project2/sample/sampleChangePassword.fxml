<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="anchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.ControllerChangePassword">
   <children>
      <VBox alignment="CENTER" fillWidth="false" layoutX="7.0" prefHeight="400.0" prefWidth="600.0">
         <children>
            <PasswordField fx:id="newPassword" alignment="CENTER" prefHeight="27.0" prefWidth="180.0" promptText="Enter new password">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <VBox.margin>
                  <Insets bottom="30.0" />
               </VBox.margin>
            </PasswordField>
            <PasswordField fx:id="confirmPassword" alignment="CENTER" prefHeight="27.0" prefWidth="180.0" promptText="Confirm new password">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <VBox.margin>
                  <Insets bottom="50.0" />
               </VBox.margin>
            </PasswordField>
            <Button fx:id="changeButton" mnemonicParsing="false" onAction="#handleChangePasswordButton" text="Change password">
               <VBox.margin>
                  <Insets bottom="30.0" />
               </VBox.margin>
            </Button>
            <Label fx:id="successLabel" alignment="CENTER" prefHeight="31.0" prefWidth="250.0">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Label>
         </children>
      </VBox>
   </children>
</AnchorPane>
